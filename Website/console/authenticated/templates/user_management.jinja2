{% extends 'base.jinja2' %}

{% block content %}
<div class="row">
    <div class="col-1"></div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                {% with messages = get_flashed_messages() %}
                    {% if messages %}
                        <div class="alert alert-danger" role="alert">
                            {{ messages[0] }}
                        </div>
                    {% endif %}
                {% endwith %}
                <h5 class="card-title">User Management Console<h5>

                <table id="package_table" class="table table-striped">
                    <thead>
                        <th scope="col">Package Name</th>
                        <th scope="col">Current Version</th>
                        <th scope="col">Latest Version</th>
                        <th scope="col">Requires Update?</th>
                    </thead>

                    <tbody>
                        {% for package in packages %}
                        <tr>
                            <td>{{package.package_name}}</td>

                            {% if package.installed_version == "" or package.installed_version == None %}
                                <td>N/A</td>
                                {% else %}
                                <td>{{package.installed_version}}</td>
                            {% endif %}

                            {% if package.latest_version == "" %}
                                <td>{{package.installed_version }}</td>
                                <td class="text-success">No</td>
                            {% else %}
                                <td>{{package.latest_version}}</td>
                                <td class="text-danger">Yes</td>
                            {% endif %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-1"></div>
    <script>
    
    </script>
</div>
{% endblock %}
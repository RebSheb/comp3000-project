{% extends 'base.jinja2' %}

{% block content %}
<div class="row">
    <div class="card-deck">
        <div class="card mt-3">
            <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-router"></i> Number of Devices</h5>
                    <p class="card-text">Discovered {{number_of_devices}} devices on your network ({{ip_range}})</p>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Number of Agents</h5>
                    <p class="card-text">Out of {{number_of_devices}} devices, there are:</p>
                    <p>{{number_of_agents}} agents running</p>
                    {% if number_of_agents == 0 %}
                        <div class="alert alert-info" role="alert">Consider installing an agent on a device to be able to view software update status!</div>
                    {% endif %}
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-check-circle"></i> Applications</h5>
                    <p class="card-text">Tracking {{total_applications}} applications across {{number_of_devices}} devices.<br></br>{{available_to_update}} of these applications require an update.</p>
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-link"></i> Useful Links</h5>
                    <p class="card-text">Here are some useful links to project stuff:
                    </p>
                    <a href="https://github.com/RebSheb/comp3000-project" class="btn btn-primary"><i class="bi bi-github"></i> GitHub</a>
                    <a href="http://raspberrypi:8080" class="btn btn-primary"><i class="bi bi-list-task"></i> Jira</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}